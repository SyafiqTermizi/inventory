{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "inventory_fe/components/**/*",
        "webpack.config.js"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ],
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2017",
        "importsNotUsedAsValues": "remove",
        "isolatedModules": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": false,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "types": [
            "svelte",
            "svelte/store",
            "svelte/motion",
            "svelte/transition",
            "svelte/animate",
            "svelte/easing"
        ]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}